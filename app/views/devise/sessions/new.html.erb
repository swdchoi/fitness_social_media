<div class="card m-5">
<div class="card-header p-3">
<h2>Log In</h2>
</div>

<div class="card-body p-5">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field m-2">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-100" %>
  </div>

  <div class="field m-2">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control w-100" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field m-2">
      <%= f.check_box :remember_me, class:"form-checkbox" %>
      <%= f.label :remember_me, class:"form-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary m-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>