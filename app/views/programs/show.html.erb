<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= render @program %>

<div class="mt-4 d-flex gap-3 flex-wrap justify-content-center my-5">
  <%= link_to "Edit Program", edit_program_path(@program), class: "btn btn-outline-warning" %>
  <%= link_to "Back to Programs", programs_path, class: "btn btn-outline-secondary" %>
  <%= button_to "Delete Program", @program, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
</div>
