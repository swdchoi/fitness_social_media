<div id="<%= dom_id workout %>" class="container my-4 p-4 border rounded shadow-sm">
  <div class="row mb-3">
    <div class="col-md-6">
      <h6 class="text-muted">Workout Name</h6>
      <p class="fs-5"><%= workout.name %></p>
    </div>
    <div class="col-md-6">
      <h6 class="text-muted">Description</h6>
      <p class="fs-5"><%= workout.desc %></p>
    </div>
  </div>

  <% if workout.exercises.any? %>
    <div class="mt-3">
      <h5 class="mb-3">Exercises</h5>
      <% workout.exercises.each do |e| %>
        <div class="row border-bottom py-2">
          <div class="col-md-4">
            <strong>Name:</strong> <%= e.name %>
          </div>
          <div class="col-md-4">
            <strong>Sets:</strong> <%= e.sets %>
          </div>
          <div class="col-md-4">
            <strong>Reps:</strong> <%= e.reps %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
